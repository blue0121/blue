<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:core="http://blue.com/schema/core"
       xmlns:jms="http://blue.com/schema/jms"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://blue.com/schema/core http://blue.com/schema/core.xsd
       http://blue.com/schema/jms http://blue.com/schema/jms.xsd">
	
	<core:task-executor id="taskExecutor" core-pool-size="10" max-pool-size="1000" queue-capacity="10000" keep-alive-seconds="60" />
	
	<jms:qpid-connection id="qpidConnection" url="tcp://localhost:5672" username="guest" password="guest" client-id="test" />
	<jms:client id="jmsClient" ref-connection="qpidConnection" />
	<jms:producer id="jmsProducer" ref-jms-client="jmsClient" ref-task-executor="taskExecutor" ref-producer-listener="producerListener" />
	
	<jms:consumer id="jmsListenerContainer" ref-jms-client="jmsClient" ref-task-executor="taskExecutor">
		<jms:listener topic="test" type="QUEUE" ref-listener="jmsListener" />
	</jms:consumer>
	
	<bean id="producerListener" class="test.jms.listener.DefaultProducerListener" />
	
	<bean id="jmsListener" class="test.jms.listener.DefaultJmsListener" />

</beans>